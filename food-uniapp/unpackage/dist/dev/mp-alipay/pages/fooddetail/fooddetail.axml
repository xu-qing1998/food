<view class="items"><view class="food-head"><image src="{{details.imgSmall}}" data-event-opts="{{[['tap',[['previewImg',['$0'],['details.imgSmall']]]]]}}" onTap="__e"></image><view class="food-name"><view class="name-txt">{{''+details.name+''}}</view></view></view><view class="food-inrduc"><view class="inrduc-center"><text class="online">——</text><text class="txt" style="color:#000000;">菜谱简介</text><text class="online">——</text><text class="fuhao">▼</text></view><view class="content">{{details.introduction}}</view></view><view class="meterials"><view class="inrduc-center"><text class="online">——</text><text class="txt">用料</text><text class="online">——</text><text class="fuhao">▼</text></view><block a:for="{{details.materials.accessory}}" a:for-item="item" a:for-index="__i0__" a:key="id"><view class="food-ingred" mode="widthFix"><text>{{item.name}}</text><text class="text-right">{{item.standardWeight+item.standardUnit}}</text></view></block><block a:for="{{details.materials.main}}" a:for-item="item" a:for-index="__i1__" a:key="id"><view class="food-ingred" mode="widthFix"><text>{{item.name}}</text><text class="text-right">{{item.standardWeight+item.standardUnit}}</text></view></block></view><view class="food-step"><view class="inrduc-center"><text class="online">——</text><text class="txt">备菜步骤</text><text class="online">——</text><text class="fuhao">▼</text></view><block a:for="{{prepare}}" a:for-item="item" a:for-index="__i2__" a:key="id"><view class="prepare"><image src="{{item.imgUrl}}" mode></image><view class="steps"><text style="color:orange;font-size:30px;">{{item.no}}</text><text>/</text><text style="color:orange;">{{prepare.length}}</text><view class="desc">{{item.desc}}</view></view></view></block><view class="inrduc-center"><text class="online">——</text><text class="txt">做法步骤</text><text class="online">——</text><text class="fuhao">▼</text></view><block a:for="{{step1}}" a:for-item="item" a:for-index="__i3__" a:key="id"><view class="prepare"><image src="{{item.image}}" mode></image><view class="steps"><text style="color:orange;font-size:30px;">{{item.no-n}}</text><text>/</text><text style="color:orange;">{{len-n}}</text><view>{{item.desc}}</view></view></view></block><view class="footer"></view><view class="goods_nav"><view class="tab"><view data-event-opts="{{[['tap',[['handleflag',['$event']]]]]}}" class="tab_item" onTap="__e"><block a:if="{{!flag}}"><uni-icons vue-id="1" type="heart" size="20" onVueInit="__l"></uni-icons></block><block a:if="{{flag}}"><uni-icons vue-id="2" type="heart-filled" size="20" color="red" onVueInit="__l"></uni-icons></block><view>收藏</view></view><view data-event-opts="{{[['tap',[['goIndex',['$event']]]]]}}" class="tab_item" onTap="__e"><uni-icons vue-id="3" type="home" size="20" onVueInit="__l"></uni-icons><view>首页</view></view><view class="tab_item"><uni-icons vue-id="4" type="redo" size="20" onVueInit="__l"></uni-icons><view class="tab-btn"><block a:if="{{canIUseShareButton}}"><button class="share-btn" open-type="share">分享</button></block></view></view></view><view class="btn"><button data-event-opts="{{[['tap',[['buttonClick',['$event']]]]]}}" class="btn-left" onTap="__e">加入菜篮子</button><button data-event-opts="{{[['tap',[['goCart',['$event']]]]]}}" class="btn-right" onTap="__e">去看看</button></view></view></view></view>