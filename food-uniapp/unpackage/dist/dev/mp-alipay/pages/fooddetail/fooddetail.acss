.items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  font-family: "\6977\4F53";
}
.items .food-head {
    position: relative;
}
.items .food-head image {
      width: 750rpx;
      height: 550rpx;
      background-size: cover;
}
.items .food-head .food-name {
      position: absolute;
      bottom: -80rpx;
      left: 50%;
      margin-left: -37rpx;
      padding: 10rpx;
      width: 60rpx;
      background-color: rgba(255, 255, 255, 0.81);
      opacity: 0.7;
      border-radius: 30rpx;
      text-align: center;
}
.items .food-head .food-name .name-txt {
        padding: 13rpx 12rpx;
        border: 1rpx solid #000;
        font-size: 33rpx;
        border-radius: 20rpx;
        color: #000;
        line-height: 43rpx;
}
.items .food-inrduc {
    width: 710rpx;
    margin-top: 100rpx;
    margin-bottom: 40rpx;
    margin-left: 20rpx;
    color: #979797;
}
.items .food-inrduc .content {
      margin-left: 38rpx;
      text-indent: 2em;
}
.items .meterials {
    margin-left: 50rpx;
    margin-bottom: 20rpx;
}
.items .goods_nav {
    position: fixed;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}
.items .goods_nav .tab {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      padding: 0 5px;
      font-size: 12px;
}
.items .goods_nav .tab .tab_item {
        margin: 0 10px;
        margin-top: 15rpx;
}
.items .goods_nav .tab .tab_item .tab-btn {
          border: 0;
}
.items .goods_nav .tab .tab_item .tab-btn .share-btn {
            height: 38rpx;
            padding: 0;
            background-color: #fff;
            line-height: 27rpx;
            font-size: 12px;
            border: none;
            outline: none;
}
.items .goods_nav .tab .tab_item .tab-btn .share-btn {
            height: 30rpx;
            padding: 0;
            background-color: #fff;
            line-height: 27rpx;
            font-size: 12px;
            border: none;
            outline: none;
}
.items .goods_nav .btn {
      float: right;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 446rpx;
      height: 80rpx;
      margin: 5px 0;
      margin-right: 10px;
      overflow: hidden;
}
.items .goods_nav .btn button {
        height: 80rpx;
        line-height: 80rpx;
        font-size: 14px;
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
}
.items .goods_nav .btn button::after {
        border: none;
}
.items .goods_nav .btn .btn-left {
        border-top-left-radius: 200rpx;
        border-bottom-left-radius: 200rpx;
        background-color: #ff0000;
        color: #fff;
}
.items .goods_nav .btn .btn-right {
        border-top-right-radius: 200rpx;
        border-bottom-right-radius: 200rpx;
        background-color: #ffa200;
        color: #fff;
}
.items .inrduc-center {
    text-align: center;
    color: orange;
}
.items .inrduc-center .txt {
      font-size: 35rpx;
      font-weight: 520;
      padding: 0 20rpx;
}
.items .inrduc-center .fuhao {
      display: block;
}
.items .food-ingred {
    width: 650rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #333;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
}
.items .food-ingred text {
      margin-left: 130rpx;
}
.items .food-ingred .text-right {
      margin-right: 150rpx;
      float: right;
}
.items .food-step {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.items .food-step .inrduc-center {
      margin-left: 212rpx;
}
.items .food-step image {
      width: 640rpx;
      height: 600rpx;
      margin-left: 55rpx;
      background-size: cover;
}
.items .food-step .food-step-desc {
      width: 670rpx;
      margin-left: 40rpx;
      line-height: 36rpx;
      margin-bottom: 20rpx;
}
.items .food-step .steps {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      box-sizing: border-box;
      margin: 10rpx 0 10rpx 50rpx;
}
.items .food-step .steps .desc {
        width: 580rpx;
        padding-left: 5rpx;
        letter-spacing: 2rpx;
        line-height: 40rpx;
        color: #666;
        text-indent: 1em;
}
.items .food-step .food-step-main {
      width: 680rpx;
}
.items .footer {
    width: 750rpx;
    height: 100rpx;
    background-color: #FFFFFF;
    margin: 40rpx auto;
}

