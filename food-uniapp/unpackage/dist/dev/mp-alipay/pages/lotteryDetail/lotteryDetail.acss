page {
  height: 100%;
  width: 100%;
}
.lotterydetail {
  background-color: #eeeded;
  height: 100%;
}
.lotterydetail .opcity1 {
    width: 540rpx;
    height: 1204rpx;
    background-color: rgba(255, 255, 255, 0.5);
    z-index: 2;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -600rpx;
    margin-left: -270rpx;
    box-shadow: 5rpx 5rpx 5rpx 5rpx #dbd8d8;
    border-radius: 16rpx;
}
.lotterydetail .opcity2 {
    width: 600rpx;
    height: 1124rpx;
    background-color: rgba(245, 244, 244, 0.6);
    z-index: 99;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -560rpx;
    margin-left: -300rpx;
    box-shadow: 5rpx 5rpx 5rpx 5rpx #dbd8d8;
    border-radius: 16rpx;
}
.lotterydetail .contentbox {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -520rpx;
    margin-left: -350rpx;
    z-index: 999;
    width: 700rpx;
    height: 1040rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: 10rpx 10rpx 5rpx 5rpx #dbd8d8;
}
.lotterydetail .contentbox .menu {
      text-align: center;
      height: 780rpx;
}
.lotterydetail .contentbox .menu image {
        background-size: cover;
        width: 100%;
        height: 500rpx;
        border-radius: 16rpx 16rpx 0 0;
}
.lotterydetail .contentbox .menu .name {
        margin-top: 20rpx;
        font-size: 38rpx;
}
.lotterydetail .contentbox .menu .metiral {
        margin-top: 20rpx;
        color: #333;
        font-size: 24rpx;
}
.lotterydetail .contentbox .btn {
      height: 180rpx;
      text-align: center;
      line-height: 100rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.lotterydetail .contentbox .btn .collect {
        margin: 8rpx 55rpx;
        padding: 15rpx 30rpx;
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        font-size: 30rpx;
        text-align: center;
        line-height: 50rpx;
        width: 100rpx;
        height: 100rpx;
        border-radius: 50%;
        background-color: #FFA200;
        color: #fff;
}
.lotterydetail .contentbox .foot {
      border-top: 1px solid #ccc;
      height: 80rpx;
      line-height: 90rpx;
      background-color: #fcfcfc;
      border-radius: 0 0 16rpx 16rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      font-size: 24rpx;
      padding: 0 20rpx;
}
.lotterydetail .contentbox .foot .time {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
}
.lotterydetail .contentbox .foot .heart {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
}

