@-webkit-keyframes turn2 {
0% {
    -webkit-transform: scale(0.99);
            transform: scale(0.99);
}
50% {
    -webkit-transform: scale(1.2);
            transform: scale(1.2);
}
100% {
    -webkit-transform: scale(0.99);
            transform: scale(0.99);
}
}
@keyframes turn2 {
0% {
    -webkit-transform: scale(0.99);
            transform: scale(0.99);
}
50% {
    -webkit-transform: scale(1.2);
            transform: scale(1.2);
}
