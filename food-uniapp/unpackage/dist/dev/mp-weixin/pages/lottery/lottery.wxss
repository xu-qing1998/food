page {
  background-color: #fff;
}
.Lottery {
  margin: 0 auto;
  padding-top: 100rpx;
}
.Lottery .select {
    margin: 0 auto;
    width: 250rpx;
    height: 250rpx;
    background-color: orange;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    -webkit-animation: turn2 2.2s linear infinite;
            animation: turn2 2.2s linear infinite;
}
.Lottery .select .up {
      height: 140rpx;
      font-size: 38rpx;
      line-height: 220rpx;
}
.Lottery .select .down {
      height: 110rpx;
      font-size: 28rpx;
}
.Lottery .search {
    margin: 50rpx auto;
    width: 600rpx;
    height: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.Lottery .search .input {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      display: inline-block;
      padding: 20rpx 0 0 20rpx;
      width: 502rpx;
      height: 70rpx;
      outline-color: red;
      border: 1px solid orange;
      border-radius: 16rpx 0 0 16rpx;
      box-shadow: #DF5000 5rpx;
      font-size: 26rpx;
}
.Lottery .search .icon {
      width: 100rpx;
      height: 94rpx;
      background-color: #FFA200;
      text-align: center;
      line-height: 100rpx;
      border-radius: 0 16rpx 16rpx 0;
}
.Lottery .search .icon uni-icons {
        background-color: #FFA200;
        color: #fff;
}
.Lottery .item {
    width: 580rpx;
    height: 400rpx;
    margin: 0 auto;
    font-size: 28rpx;
}
.Lottery .item .item-text {
      display: inline-block;
      margin: 10rpx 10rpx;
      padding: 15rpx 30rpx;
      border: 1rpx solid #ccc;
      border-radius: 55rpx;
}

